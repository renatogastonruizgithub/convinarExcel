<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <title>Resultado</title>
</head>
<body class="container-lg">
    <h3 class="m-2">Resultado de la carga del archivo Excel</h3>

    <section class="table-responsive-lg" style="overflow-x: auto;scrollbar-width: auto;height: 450px;">   
        <table class="table table-sm table-dark table-hover" style="font-size: 10px;" >
            <thead >
                <tr>
                
                <th scope="col">Part number</th>
                <th scope="col">lote productivo</th>                 
                <th scope="col">producto</th>
                
               
                <th scope="col">lote esteril</th>
                <th scope="col">OF</th>
                <th scope="col">cantidad</th>
                
                </tr>
            </thead>
            <tbody id="dataTable">
                <% values.forEach(function(row) { %>
                    <tr>
                        <% row.forEach(function(data) { %>
                            <td><%= data %></td>
                        <% }); %>
                    </tr>
                <% }); %>      
            
            </tbody>        
        </table>
    </section>

    <section class="mt-3">        
        <button href="/" type="button" id="volver" class="btn btn-secundary">volver</button>
        <button id="copyButton" type="button" class="btn btn-primary">Copiar Tabla</button>
    </section>

<script src="/js/download.js">
</script> 
 <script>
    document.getElementById('copyButton').addEventListener('click', function() {
    copyTableToClipboard('dataTable')
    alert('copyButton')
});

function copyTableToClipboard(tableId) {
    const table = document.getElementById(tableId);
    const range = document.createRange();
    range.selectNode(table);
    window.getSelection().removeAllRanges();
    window.getSelection().addRange(range);
    document.execCommand('copy');
    window.getSelection().removeAllRanges();
    
}
document.getElementById('volver').addEventListener('click', function() {
   
   window.location.href = '/';
});

</script> 
</body>
</html>
